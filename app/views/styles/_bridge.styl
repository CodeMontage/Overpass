.bridge
    background-color rgb(233,241,213)
    clearfix()

    .posts
    .planks
        margin 0
        padding 0
        background-color white
        list-style-type none

    .posts
        float left

    .planks
        float right

    .indicator
        position absolute
        width 200px
        height 297px
        left 25%
        top -340px

        &.win
            position:absolute;
            width 200px
            height 297px
            left 25%
            top 500px
            -webkit-transition: ease-in-out 2s;
            -moz-transition:    ease-in-out 2s;
            -o-transition:      ease-in-out 2s;
            transition:         ease-in-out 2s;

