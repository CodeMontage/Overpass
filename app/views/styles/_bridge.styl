.bridge
    clearfix()
    margin 50px 0 50px 0

    .title
        margin-top -40px
        color white
        text-align center

    .posts
    .planks
        margin 10px 0 0 0
        padding 0
        list-style-type none

    .posts
        float left
 
        &.active
            display block

        &.left
            margin-left 110px

        &.right
            margin-left 110px

    .planks
        float right
        background-color rgba(255,255,255,0.4)

    .go-button
        float right
        margin -70px auto
        width 3em
        height 2.6em
        padding 0.5em 0
        background-color rgb(242,56,90)
        color white
        font-size 2em
        text-align center
        border-radius 0.2em
        border 0.2em solid white


    .indicator
        position absolute
        width 200px
        height 297px
        left 15%
        top -340px

        &.win
            position absolute
            width 200px
            height 297px
            left 15%
            top 1000px
            -webkit-transition ease-in-out 2.5s
            -moz-transition    ease-in-out 2.5s
            -o-transition      ease-in-out 2.5s
            transition         ease-in-out 2.5s

    .indicatorFail
        position absolute
        width 200px
        height 297px
        left 20%
        top -340px

        &.fail
            position absolute
            width 50px
            height 75px
            left 45%
            left 110%
            top 500px
            -webkit-transition ease-in-out 2s
            -moz-transition    ease-in-out 2s
            -o-transition      ease-in-out 2s
            transition         ease-in-out 2s
